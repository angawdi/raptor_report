
<% fruit.forEach(function(m){%>
	<div>
		<h4>
			<%=m.name%>
		</h4>
		<img src="<%= m.image%>"><br>
		Price: $<%=m.price%>/lb <br>
		<a class="delete-btn" href="/fruits/<%=m.id%>">Delete</a>
		<hr>
	</div>
<%});%>

